{{#extend "scripts"}}
<script src="/js/list.js"></script>
{{/extend}}

{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Teendőim</h1>
</div>

<table class="table table-striped table-hover" id="errorTable">
    <thead>
        <tr>
            <th>Teendő neve</th>
            <th>Állapot</th>
            <th>FElvétel időpontja</th>
            <th>Módosítás (név, állapot)</th>
            <th>Törlés</th>
        </tr>   
    </thead>
    <tbody>
        {{#each errors}}
        <tr>
            <td>{{description}}</td>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{date}}</td>
            <td><a class="glyphicon glyphicon-pencil" aria-hidden="true"  href="/errors/edit/{{id}}"></a></td>
            <td><a class="glyphicon glyphicon-trash" aria-hidden="true"  href="/errors/delete/{{id}}"></a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p>
<a href="/errors/new" class="btn btn-default">Új teendő</a>
</p>
